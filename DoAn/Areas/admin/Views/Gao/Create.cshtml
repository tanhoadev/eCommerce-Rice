@model DoAn.Areas.admin.Models.Gao
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/admin/Views/Share/_layoutAdmin.cshtml";
}

<div class="row justify-content-between">
    <div class="col-lg-4 col-md-4 p-r-0 title-margin-right">
        <div class="page-header">
            <div class="page-title">
                <h1>Xin chào, <span class="fw-b fz-18">Admin</span></h1>
            </div>
        </div>
    </div>
    <!-- /# column -->
    <div class="col-lg-6 col-md-6 title-margin-left">
        <div class="page-header">
            <div class="page-title">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Gao" asp-area="admin">Gạo</a></li>
                    <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Gao" asp-area="admin">Danh sách</a></li>
                    <li class="breadcrumb-item active">Tạo mới</li>
                </ol>
            </div>
        </div>
    </div>
    <!-- /# column -->
</div>

<div class="container-fluid card overflow-scroll">
    <div class="row">
        <div class="col-lg-12">
            <div class="horizontal-form-elements">
                <form method="post" id="form-horizontal" enctype="multipart/form-data">
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label class="col-sm-2 col-md-12 control-label">Tên gạo</label>
                                <div class="col-sm-10">
                                    <input type="text" asp-for="tenGao" required class="form-control">
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label class="col-sm-2 col-md-12 control-label">Xuất xứ</label>
                                <div class="col-sm-10">
                                    <input type="text" asp-for="xuatXu" required class="form-control">
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label class="col-sm-2 col-md-12 control-label">Giá bán</label>
                                <div class="col-sm-10">
                                    <input type="number" asp-for="giaBan" required class="form-control">
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label class="col-sm-2 col-md-12 control-label">Đặc tính</label>
                                <div class="col-sm-10">
                                    <input type="text" asp-for="dacTinh" required class="form-control">
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label for="tk" class="col-sm-2 col-md-12 control-label">Tình trạng</label>
                                <div class="col-sm-10">
                                    <select class="form-control appe-auto" asp-for="tinhTrang" >
                                        <option value="0">Hết hàng</option>
                                        <option value="1">Còn hàng</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label class="col-sm-2 col-md-12 control-label">Mô tả</label>
                                <div class="col-sm-10">
                                    <textarea required asp-for="moTa" class="form-control"></textarea>
                                </div>
                            </div>
                        </div>
                        <!-- /# column -->
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label class="col-sm-2 col-md-12 control-label">Hình ảnh</label>
                                <div class="col-sm-10">
                                    <img src="kk" class="image-Loai" />
                                    <input type="file" name="image" onchange="document.querySelector('.image-Loai').src = window.URL.createObjectURL(this.files[0]) " required accept="image/*" />
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label class="col-sm-2 col-md-12 control-label">Loại gạo</label>
                                <div class="col-sm-10">
                                    <select class="form-control appe-auto" asp-for="IDLoaiGao" asp-items="@ViewBag.LoaiGao">
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label for="tk" class="col-sm-2 col-md-12 control-label">Đang bán chạy</label>
                                <div class="col-sm-10">
                                    <select class="form-control appe-auto" asp-for="DangBanChay" >
                                        <option value="0">Không</option>
                                        <option value="1">Có</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label class="col-sm-2 col-md-12 control-label">Còn lại</label>
                                <div class="col-sm-10">
                                    <input type="number" asp-for="conLai" required class="form-control">
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label for="tk" class="col-sm-2 col-md-12 control-label">số sao</label>
                                <div class="col-sm-10">
                                    <select class="form-control appe-auto" asp-for="soSao" >
                                        <option value="0">0</option>
                                        <option value="1">1</option>
                                        <option value="2">2</option>
                                        <option value="3">3</option>
                                        <option value="4">4</option>
                                        <option value="5">5</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <!-- /# column -->
                    </div>
                </form>
            </div>
            <!-- /# card -->
        </div>
        <!-- /# column -->
    </div>
    <div class="row justify-content-end">
        <div class="col-3">
            <a asp-action="Index" asp-controller="Gao" asp-area="admin" class="btn btn-lg btn-success btn-block waves-effect waves-light">
                <i class="ti-arrow-left fw-b"></i> Quay về danh sách
            </a>
        </div>
        <div class="col-3">
            <button type="submit" form="form-horizontal" class="btn btn-lg btn-success btn-block waves-effect waves-light">
                <i class="ti-save fw-b"></i> Lưu
            </button>
        </div>
    </div>
</div>


