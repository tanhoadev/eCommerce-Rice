
@{
    ViewData["Title"] = "Update";
    Layout = "~/Areas/admin/Views/Share/_layoutAdmin.cshtml";
}
@model DoAn.Areas.admin.Models.LoaiGao
<div class="row justify-content-between">
    <div class="col-lg-4 col-md-4 p-r-0 title-margin-right">
        <div class="page-header">
            <div class="page-title">
                <h1>Xin chào, <span class="fw-b fz-18">Admin</span></h1>
            </div>
        </div>
    </div>
    <!-- /# column -->
    <div class="col-lg-6 col-md-6 p-l-0 title-margin-left">
        <div class="page-header">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-action="Index" asp-controller="LoaiGao" asp-area="admin">Loại gạo</a></li>
                    <li class="breadcrumb-item"><a asp-action="Index" asp-controller="LoaiGao" asp-area="admin">Danh sách</a></li>
                    <li class="breadcrumb-item active">Sửa</li>
                </ol>
        </div>
    </div>
    <!-- /# column -->
</div>

<div class="container-fluid card overflow-scroll">
    <div class="row">
        <div class="col-lg-12">
            <div class="horizontal-form-elements">
                <form method="post" id="form-horizontal" enctype="multipart/form-data">
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label class="col-sm-2 col-md-12 control-label">Tên loại gạo</label>
                                <div class="col-sm-10">
                                    <input type="text" asp-for="@Model.tenLoaiGao" required class="form-control">
                                </div>
                            </div>
                        </div>
                        <!-- /# column -->
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label class="col-sm-2 col-md-12 control-label">Hình ảnh</label>
                                <div class="col-sm-10">
                                    <img src="~/upload/@Model.hinhAnh" class="image-Loai"/>
                                    <input type="file" name="image1" onchange="document.querySelector('.image-Loai').src = window.URL.createObjectURL(this.files[0]) " accept="image/*" />
                                    <input type="hidden" asp-for="hinhAnh"/>
                                </div>
                            </div>
                        </div>
                        <!-- /# column -->
                    </div>
                </form>
            </div>
            <!-- /# card -->
        </div>
        <!-- /# column -->
    </div>
    <div class="row justify-content-end">
        <div class="col-3">
            <a asp-action="Index" asp-controller="LoaiGao" asp-area="admin" class="btn btn-lg btn-success btn-block waves-effect waves-light">
                <i class="ti-arrow-left fw-b"></i> Quay về danh sách
            </a>
        </div>
        <div class="col-3">
            <button form="form-horizontal" class="btn btn-lg btn-success btn-block waves-effect waves-light">
                <i class="ti-save fw-b"></i> Lưu
            </button>
        </div>
    </div>
</div>


