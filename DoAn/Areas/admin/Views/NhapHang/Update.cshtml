@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/admin/Views/Share/_layoutAdmin.cshtml";
}

<div class="row justify-content-between">
    <div class="col-lg-4 col-md-4 p-r-0 title-margin-right">
        <div class="page-header">
            <div class="page-title">
                <h1>Xin chào, <span class="fw-b fz-18">Admin</span></h1>
            </div>
        </div>
    </div>
    <!-- /# column -->
    <div class="col-lg-6 col-md-6 title-margin-left">
        <div class="page-header">
            <div class="page-title">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-action="Index" asp-controller="NhapHang" asp-area="admin">Nhập hàng</a></li>
                    <li class="breadcrumb-item"><a asp-action="Index" asp-controller="NhapHang" asp-area="admin">Danh sách</a></li>
                    <li class="breadcrumb-item active">Sửa
            </div>
        </div>
    </div>
    <!-- /# column -->
</div>

<div class="container-fluid card overflow-scroll">
    <div class="row">
        <div class="col-lg-12">
            <div class="horizontal-form-elements">
                <form id="form-horizontal">
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label class="col-sm-2 col-md-12 control-label">Tên gạo</label>
                                <div class="col-sm-10">
                                    <input type="text" required class="form-control">
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label class="col-sm-2 col-md-12 control-label">Số lượng</label>
                                <div class="col-sm-10">
                                    <input type="text" required class="form-control">
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label class="col-sm-2 col-md-12 control-label">Ngày nhập</label>
                                <div class="col-sm-10">
                                    <input type="date" required class="form-control">
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <!-- /# card -->
        </div>
        <!-- /# column -->
    </div>
    <div class="row justify-content-end">
        <div class="col-3">
            <a asp-action="Index" asp-controller="NhapHang" asp-area="admin" class="btn btn-lg btn-success btn-block waves-effect waves-light">
                <i class="ti-arrow-left fw-b"></i> Quay về danh sách
            </a>
        </div>
        <div class="col-3">
            <button type="submit" form="form-horizontal" class="btn btn-lg btn-success btn-block waves-effect waves-light">
                <i class="ti-save fw-b"></i> Lưu
            </button>
        </div>
    </div>
</div>
