
@{
    ViewData["Title"] = "Index";
    Layout = "";
}
@model DoAn.Areas.admin.Models.TaiKhoan
<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>SB Admin 2 - Register</title>

    <!-- Custom fonts for this template-->
    <link href="vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
          rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
    <!-- Custom styles for this template-->
    <link href="~/access/login/css/sb-admin-2.min.css" rel="stylesheet">

</head>
<style>
    input::-ms-reveal,
    input::-ms-clear {
        display: none;
    }
</style>
<body class="bg-gradient-primary">

    <div class="container">

        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <!-- Nested Row within Card Body -->
                <div class="row">
                    <div class="col-lg-5 d-none d-lg-block bg-register-image"></div>
                    <div class="col-lg-7">
                        <div class="p-5">
                            <div class="text-center">
                                <h1 class="h4 text-gray-900 mb-4">Đăng Kí Tài Khoản</h1>
                            </div>
                            <form class="user" method="post" id="form-registor">
                                <div class="form-group">
                                    <input type="text" asp-for="taiKhoan" maxlength="25" required class="form-control form-control-user" 
                                           placeholder="Tên đăng nhập">
                                </div>
                                <div class="form-group">
                                    <input type="text" maxlength="30" value="@ViewData["hoTen"]" name="hoTen" required class="form-control form-control-user"
                                           placeholder="Họ và tên">
                                </div>
                                <div class="form-group">
                                    <input type="text" required name="sDT" value="@ViewData["sdt"]" class="form-control form-control-user"
                                           placeholder="Số điện thoại">
                                </div>
                                <div class="form-group">
                                    <input type="email" required name="email" value="@ViewData["email"]" class="form-control form-control-user" id="exampleInputEmail"
                                           placeholder="Địa chỉ email">
                                </div>
                                <div class="form-group">
                                    <input placeholder="Ngày sinh"
                                           required
                                           name="birthday"
                                           class="form-control form-control-user"
                                           type="text"
                                           onfocus="(this.type='date')"
                                           onblur="(this.type='text')"
                                           id="date" />
                                </div>
                                <div class="form-group row">
                                    <div class="col-sm-6 mb-3 mb-sm-0 position-relative">
                                        <input type="password" asp-for="matKhau" maxlength="30" value="@ViewData["pass"]" required class="form-control form-control-user pr-44"
                                               id="password-input" placeholder="Mật khẩu">
                                        <button class="btn btn-link position-absolute end-0 top-0 r-10 text-decoration-none text-muted" type="button" id="password-eye"><i class="fas fa-eye"></i></button>
                                    </div>
                                    <div class="col-sm-6 position-relative">
                                        <input type="password" maxlength="30" name="repeat" value="@ViewData["repeat"]" required class="form-control form-control-user pr-44"
                                               id="RepeatPassword" placeholder="Nhập lại mật khẩu">
                                        <button class="btn btn-link position-absolute end-0 top-0 r-10 text-decoration-none text-muted" type="button" id="password-confirm-eye"><i class="fas fa-eye"></i></button>
                                    </div>
                                </div>
                                <button type="submit" class="btn btn-primary button-regis fz-16 btn-user btn-block mt-4">
                                    Đăng Kí
                                </button>
                            </form>
                            <hr>
                            <div class="text-center">
                                <a class="" asp-action="Index" asp-controller="Login">Bạn đã có tài khoản? Đăng nhập ngay!</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

    <!-- Bootstrap core JavaScript-->
    <script src="~/access/login/vendor/jquery/jquery.min.js"></script>
    <script src="~/access/login/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="~/access/login/vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="~/access/login/js/sb-admin-2.min.js"></script>

    @await Component.InvokeAsync("NToastNotify")

</body>

</html>
